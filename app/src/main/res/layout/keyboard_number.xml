<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="16dp"
    android:layout_gravity="bottom"
    android:focusable="true"
    android:clickable="true"
    android:layout_margin="8dp"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/key_num_1"
                style="@style/TextHeadingAppBarTitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="@android:color/transparent"
                android:text="1"
                android:textColor="@color/black"
                app:cornerRadius="16dp"
                app:strokeColor="@color/color_primary"
                app:strokeWidth="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/key_num_2"
                style="@style/TextHeadingAppBarTitle"
                android:layout_width="0dp"

                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="@android:color/transparent"
                android:text="2"
                android:textColor="@color/black"
                app:cornerRadius="16dp"
                app:strokeColor="@color/color_primary"
                app:strokeWidth="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/key_num_3"
                style="@style/TextHeadingAppBarTitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="@android:color/transparent"
                android:text="3"
                android:textColor="@color/black"
                app:cornerRadius="16dp"
                app:strokeColor="@color/color_primary"
                app:strokeWidth="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/key_num_delete"
                style="@style/TextHeadingAppBarTitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="@android:color/transparent"
                android:textColor="@color/black"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_backspace"
                app:iconSize="24dp"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconTint="@color/black"
                app:strokeColor="@color/color_primary_gradiant"
                app:strokeWidth="1dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/key_num_4"
                style="@style/TextHeadingAppBarTitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="@android:color/transparent"
                android:text="4"
                android:textColor="@color/black"
                app:cornerRadius="16dp"
                app:strokeColor="@color/color_primary"
                app:strokeWidth="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/key_num_5"
                style="@style/TextHeadingAppBarTitle"
                android:layout_width="0dp"

                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="@android:color/transparent"
                android:text="5"
                android:textColor="@color/black"
                app:cornerRadius="16dp"
                app:strokeColor="@color/color_primary"
                app:strokeWidth="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/key_num_6"
                style="@style/TextHeadingAppBarTitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="@android:color/transparent"
                android:text="6"
                android:textColor="@color/black"
                app:cornerRadius="16dp"
                app:strokeColor="@color/color_primary"
                app:strokeWidth="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/key_num_minus"
                style="@style/TextHeadingAppBarTitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="@android:color/transparent"
                android:text="-"
                android:textSize="28dp"
                android:textColor="@color/black"
                app:cornerRadius="16dp"
                app:strokeColor="@color/color_primary_gradiant"
                app:strokeWidth="1dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/key_num_7"
                style="@style/TextHeadingAppBarTitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="@android:color/transparent"
                android:text="7"
                android:textColor="@color/black"
                app:cornerRadius="16dp"
                app:strokeColor="@color/color_primary"
                app:strokeWidth="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/key_num_8"
                style="@style/TextHeadingAppBarTitle"
                android:layout_width="0dp"

                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="@android:color/transparent"
                android:text="8"
                android:textColor="@color/black"
                app:cornerRadius="16dp"
                app:strokeColor="@color/color_primary"
                app:strokeWidth="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/key_num_9"
                style="@style/TextHeadingAppBarTitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="@android:color/transparent"
                android:text="9"
                android:textColor="@color/black"
                app:cornerRadius="16dp"
                app:strokeColor="@color/color_primary"
                app:strokeWidth="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/key_num_calculator"
                style="@style/TextHeadingAppBarTitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                app:icon="@drawable/ic_calculator"
                app:iconTint="@color/black"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                android:backgroundTint="@android:color/transparent"
                app:cornerRadius="16dp"
                app:strokeColor="@color/color_primary_gradiant"
                app:strokeWidth="1dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/key_num_nol"
                style="@style/TextHeadingAppBarTitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="@android:color/transparent"
                android:text="0"
                android:textColor="@color/black"
                app:cornerRadius="16dp"
                app:strokeColor="@color/color_primary"
                app:strokeWidth="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/key_num_koma"
                style="@style/TextHeadingAppBarTitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="@android:color/transparent"
                android:text=","
                android:textColor="@color/black"
                app:cornerRadius="16dp"
                app:strokeColor="@color/color_primary"
                app:strokeWidth="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/key_num_selesai"
                style="@style/TextCardTitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="2dp"
                android:paddingHorizontal="0dp"
                android:layout_marginVertical="5dp"
                android:layout_weight="1"
                android:background="@drawable/cograd_blue_to_purple"
                android:text="Selesai"
                android:textColor="@color/white"
                app:backgroundTint="@null"
                app:cornerRadius="16dp"
                app:strokeColor="@color/color_primary"
                app:strokeWidth="1dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>