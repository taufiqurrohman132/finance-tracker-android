<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    android:layout_gravity="bottom"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <com.google.android.material.button.MaterialButton
                android:id="@+id/key_num_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:strokeColor="@color/color_primary"
                android:paddingVertical="14dp"
                app:strokeWidth="1dp"
                app:cornerRadius="16dp"
                android:layout_margin="2dp"
                android:backgroundTint="@android:color/transparent"
                android:text="1"
                android:layout_weight="1"
                style="@style/TextHeadingAppBarTitle"
                android:textColor="@color/black"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/key_num_2"
                android:layout_width="0dp"
                app:cornerRadius="16dp"
                android:paddingVertical="14dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                app:strokeColor="@color/color_primary"
                app:strokeWidth="1dp"
                android:backgroundTint="@android:color/transparent"
                android:text="2"
                android:layout_weight="1"
                style="@style/TextHeadingAppBarTitle"
                android:textColor="@color/black"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/key_num_3"
                android:layout_margin="2dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingVertical="14dp"
                app:cornerRadius="16dp"
                app:strokeColor="@color/color_primary"
                app:strokeWidth="1dp"
                android:backgroundTint="@android:color/transparent"
                android:text="3"
                android:layout_weight="1"
                style="@style/TextHeadingAppBarTitle"
                android:textColor="@color/black"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/key_num_delete"
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:layout_height="wrap_content"
                android:paddingVertical="14dp"
                app:strokeColor="@color/color_primary"
                app:cornerRadius="16dp"
                app:strokeWidth="1dp"
                android:backgroundTint="@android:color/transparent"
                app:icon="@drawable/ic_camera"
                app:iconTint="@color/black"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                android:layout_weight="1"
                style="@style/TextHeadingAppBarTitle"
                android:textColor="@color/black"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <com.google.android.material.button.MaterialButton
                android:id="@+id/key_num_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:strokeColor="@color/color_primary"
                android:paddingVertical="14dp"
                app:strokeWidth="1dp"
                app:cornerRadius="16dp"
                android:layout_margin="2dp"
                android:backgroundTint="@android:color/transparent"
                android:text="4"
                android:layout_weight="1"
                style="@style/TextHeadingAppBarTitle"
                android:textColor="@color/black"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/key_num_5"
                android:layout_width="0dp"
                app:cornerRadius="16dp"
                android:paddingVertical="14dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                app:strokeColor="@color/color_primary"
                app:strokeWidth="1dp"
                android:backgroundTint="@android:color/transparent"
                android:text="5"
                android:layout_weight="1"
                style="@style/TextHeadingAppBarTitle"
                android:textColor="@color/black"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/key_num_6"
                android:layout_margin="2dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingVertical="14dp"
                app:cornerRadius="16dp"
                app:strokeColor="@color/color_primary"
                app:strokeWidth="1dp"
                android:backgroundTint="@android:color/transparent"
                android:text="6"
                android:layout_weight="1"
                style="@style/TextHeadingAppBarTitle"
                android:textColor="@color/black"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/key_num_minus"
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:layout_height="wrap_content"
                android:paddingVertical="14dp"
                app:strokeColor="@color/color_primary"
                app:cornerRadius="16dp"
                app:strokeWidth="1dp"
                android:backgroundTint="@android:color/transparent"
                android:text="-"
                android:layout_weight="1"
                style="@style/TextHeadingAppBarTitle"
                android:textColor="@color/black"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <com.google.android.material.button.MaterialButton
                android:id="@+id/key_num_7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:strokeColor="@color/color_primary"
                android:paddingVertical="14dp"
                app:strokeWidth="1dp"
                app:cornerRadius="16dp"
                android:layout_margin="2dp"
                android:backgroundTint="@android:color/transparent"
                android:text="7"
                android:layout_weight="1"
                style="@style/TextHeadingAppBarTitle"
                android:textColor="@color/black"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/key_num_8"
                android:layout_width="0dp"
                app:cornerRadius="16dp"
                android:paddingVertical="14dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                app:strokeColor="@color/color_primary"
                app:strokeWidth="1dp"
                android:backgroundTint="@android:color/transparent"
                android:text="8"
                android:layout_weight="1"
                style="@style/TextHeadingAppBarTitle"
                android:textColor="@color/black"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/key_num_9"
                android:layout_margin="2dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingVertical="14dp"
                app:cornerRadius="16dp"
                app:strokeColor="@color/color_primary"
                app:strokeWidth="1dp"
                android:backgroundTint="@android:color/transparent"
                android:text="9"
                android:layout_weight="1"
                style="@style/TextHeadingAppBarTitle"
                android:textColor="@color/black"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/key_num_calculator"
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:layout_height="wrap_content"
                android:paddingVertical="14dp"
                app:strokeColor="@color/color_primary"
                app:cornerRadius="16dp"
                app:strokeWidth="1dp"
                android:backgroundTint="@android:color/transparent"
                android:text="1"
                android:layout_weight="1"
                style="@style/TextHeadingAppBarTitle"
                android:textColor="@color/black"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <com.google.android.material.button.MaterialButton
                android:id="@+id/key_num_nol"
                android:layout_width="0dp"
                app:cornerRadius="16dp"
                android:paddingVertical="14dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                app:strokeColor="@color/color_primary"
                app:strokeWidth="1dp"
                android:backgroundTint="@android:color/transparent"
                android:text="1"
                android:layout_weight="1"
                style="@style/TextHeadingAppBarTitle"
                android:textColor="@color/black"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/key_num_koma"
                android:layout_margin="2dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingVertical="14dp"
                app:cornerRadius="16dp"
                app:strokeColor="@color/color_primary"
                app:strokeWidth="1dp"
                android:backgroundTint="@android:color/transparent"
                android:text=","
                android:layout_weight="1"
                style="@style/TextHeadingAppBarTitle"
                android:textColor="@color/black"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/key_num_selesai"
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp"
                app:strokeColor="@color/color_primary"
                app:cornerRadius="16dp"
                app:strokeWidth="1dp"
                android:background="@drawable/cograd_blue_to_purple"
                app:backgroundTint="@null"
                android:text="Selesai"
                android:layout_weight="1"
                style="@style/TextHeadingAppBarTitle"
                android:textColor="@color/white"/>

        </LinearLayout>
        
    </LinearLayout>

</androidx.cardview.widget.CardView>