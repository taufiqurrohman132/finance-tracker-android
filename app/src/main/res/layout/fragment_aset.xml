<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.aset.list.AsetFragment">

    <!-- AppBar dengan CollapsingToolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/white"
            app:title="Aset"
            app:collapsedTitleGravity="center_horizontal"
            app:collapsedTitleTextAppearance="@style/ToolbarTitleCenter"
            app:titleCollapseMode="scale"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <!-- Toolbar -->



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="34dp"
                android:orientation="vertical"
                android:layout_marginTop="?attr/actionBarSize"
                android:padding="16dp"
                android:layout_gravity="bottom"
                app:layout_collapseParallaxMultiplier="0.7"
                app:layout_collapseMode="parallax">

                <!-- Summary Aset -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp"
                    android:background="@drawable/cograd_stroke_blue_to_purple">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">
                        <TextView
                            style="@style/TextBodyMain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Aset"/>
                        <TextView
                            android:id="@+id/aset.tv_aset"
                            style="@style/TextBodySecondary"
                            android:layout_width="match_parent"
                            android:textAlignment="center"
                            android:lines="1"
                            android:ellipsize="end"
                            android:layout_height="wrap_content"
                            android:text="Rp 29.393.949,90"/>
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/color_primary"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">
                        <TextView
                            style="@style/TextBodyMain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Liabilitas"/>
                        <TextView
                            style="@style/TextBodySecondary"
                            android:id="@+id/aset.tv_liabilitas"
                            android:layout_width="match_parent"
                            android:textAlignment="center"
                            android:lines="1"
                            android:ellipsize="end"
                            android:layout_height="wrap_content"
                            android:text="Rp 29.393.949,90"/>
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/color_primary_gradiant"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">
                        <TextView
                            style="@style/TextBodyMain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total"/>
                        <TextView
                            style="@style/TextBodySecondary"
                            android:layout_width="match_parent"
                            android:textAlignment="center"
                            android:ellipsize="end"
                            android:id="@+id/aset.tv_total"
                            android:lines="1"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content"
                            android:text="Rp 29.393.949,90"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Title saat EXPANDED -->

<!--            <TextView-->
<!--                android:id="@+id/aset.tv_total_balance_selected"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                app:layout_collapseMode="parallax"-->
<!--                android:text="34.344.344,90"-->
<!--                android:layout_marginHorizontal="16dp"-->
<!--                app:layout_collapseParallaxMultiplier="0.7"-->
<!--                android:layout_gravity="bottom"-->
<!--                android:maxLines="1" />-->


            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@android:color/transparent"
                app:layout_collapseMode="pin"/>

            <FrameLayout
                android:id="@+id/selection_layout"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:clickable="true"
                android:focusable="true"
                app:layout_collapseMode="pin"
                android:layout_height="?attr/actionBarSize"
                >
                <TextView
                    android:id="@+id/btn_batalkan_selection"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Batalkan"
                    style="@style/TextCardTitle"
                    android:layout_marginStart="16dp"
                    android:layout_gravity="start"
                    android:textColor="@color/black"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/btn_pilih_semua_selection"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Pilih Semua"
                    android:layout_gravity="end"
                    android:layout_marginEnd="16dp"
                    style="@style/TextCardTitle"
                    android:textColor="@color/black"
                    android:gravity="center"
                    />
            </FrameLayout>


        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/aset.rv_aset"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_aset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add"
        android:contentDescription="Add Aset"
        android:layout_margin="16dp"
        app:layout_anchor="@id/aset.rv_aset"
        app:layout_anchorGravity="bottom|end"
        android:backgroundTint="@color/color_primary"
        app:tint="@color/white"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
